# Example environment configuration for Internet Connection Monitor
# Copy this file to .env and customize for your environment

# Sites to Monitor (comma-separated)
SITES=google.com,github.com,cloudflare.com,wikipedia.org,example.com

# General Settings
INTER_TEST_DELAY=2s
GLOBAL_TIMEOUT=30s
CACHE_SIZE=100

# Elasticsearch Configuration
ES_ENABLED=true
ES_ENDPOINT=http://elasticsearch:9200
ES_INDEX_PATTERN=internet-connection-monitor-%{+yyyy.MM.dd}
ES_USERNAME=
ES_PASSWORD=
ES_BULK_SIZE=50
ES_FLUSH_INTERVAL=10s

# SNMP Configuration
SNMP_ENABLED=true
SNMP_HOST_PORT=161
SNMP_COMMUNITY=public

# Prometheus Configuration
PROM_ENABLED=true
PROM_HOST_PORT=9090

# Logging
LOG_LEVEL=info

# Host Ports (avoid conflicts)
# If you already have services on these ports, change them here
# SNMP_HOST_PORT=1161
# PROM_HOST_PORT=9190
